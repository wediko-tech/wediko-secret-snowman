.container-fluid
  .row
    .col-xs-12
      .wishlist-header = @list.title
      .wishlist-page
        p = @list.description
        - if @requests.any?
          .table-responsive
            table#catalog-table.wishlist-table.table.table-hover
              thead
                tr
                  th
                  th
                  th
                    | Recipient
                  th
                    | Description
                  th
                    | Link
                  th
                    | Age
                  th
                    | Gender
              tbody
                = render partial: 'lists/request_row_template', collection: @requests, as: :request
        - else
          h1 = "No requests have been created for this wishlist!"

        .wishlist-remove
          = button_to "Remove Selected Requests", not_implemented_path, class: "btn btn-danger"

        .wishlist-add
          = link_to "+ Add New Request", not_implemented_path, class: "btn btn-default"
